[user]
	name = yyx
	email = yuxin.yan.cs@gmail.com
[init]
	defaultBranch = main
[core]
    quotepath = off
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    line-numbers = true
    side-by-side = true
    features = gruvmax-fang
[include]
    path = ~/.config/delta/themes.gitconfig


[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
